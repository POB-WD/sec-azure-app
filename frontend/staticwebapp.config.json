{
    "routes": [
        {
            "route": "/.auth/*",
            "allowedRoles": [
                "anonymous",
                "authenticated"
            ]
        },
        {
            "route": "/*",
            "allowedRoles": [
                "authenticated"
            ],
            "headers": {
                "cache-control": "no-cache, private"
            }
        }
    ],
    "responseOverrides": {
        "401": {
            "statusCode": 302,
            "redirect": "/.auth/login/aad"
        }
    },
    "auth": {
        "identityProviders": {
            "azureActiveDirectory": {
                "registration": {
                    "openIdIssuer": "https://login.microsoftonline.com/7e124831-22a1-4957-9fae-e5a001f951f8/v2.0",
                    "clientIdSettingName": "AZURE_CLIENT_ID",
                    "clientSecretSettingName": "AZURE_CLIENT_SECRET"
                }
            }
        }
    }
}